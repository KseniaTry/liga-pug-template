doctype html

include ../components

block variables

html(lang="ru")
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content="FindEdu — все для выбора профессий в одном месте")
    //- генерируйте favicon тут - https://realfavicongenerator.net/
    //- в подключение фавикон манифеста обязательно добавьте строчки crossorigin="use-credentials"
      <link rel="icon" href="favicon.ico">
    link(rel="icon" href="favicon/favicon.ico")
    link(rel="icon" type="image/png" sizes="96x96" href="favicon/favicon-96x96.png")
    link(rel="icon" type="image/svg+xml" href="favicon/favicon.svg")
    link(rel="apple-touch-icon" sizes="180x180" href="favicon/apple-touch-icon.png")
    //- используйте только для шрифта находящегося на первом экране
    //- link(rel="preload", href="fonts/placeholder.woff2", as="font", crossorigin="anonymous")
    //- При необходимости вы можете добавить разметку Open graf. - const Open graf = true
    //- link(rel="preload", href="fonts/inter-400.woff2", as="font", crossorigin="anonymous")
    if (openGraf)
      //- Обязательно измените содержание контента на тот что необходим!
      //- Введите заголовок
      meta(property="og:title", content="Лига решений")
      //- Введите заголовок путь к картинке
      meta(property="og:image", content="https://24fortest.ru/img/content/sharing.png")
      //- Введите необходимый тип
      meta(property="og:type", content="article")
      //- Введите адрес сайта
      meta(property="og:url", content="https://24fortest.ru/")
      //- Введите описание
      meta(property="og:description", content="Простые и понятные решения в помощь разработчикам от команды Лига А")

    //- link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css")
    link(rel="manifest" href="favicon/manifest.json" crossorigin="use-credentials")
    link(rel="stylesheet", href="css/style.min.css")

  body
    .wrapper(class=wrapperMods)
      if (hasHeader)
        +header(headerMods, currentUrl)

      block main

      if (hasFooter)
        +footer(footerMods)

    block modals

    //- script(src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js")
    //- script(src="js/vendor/swiper.js")
    script(src="js/vendor.min.js")
    script(src="js/main.min.js")
